@using Microsoft.AspNetCore.Mvc.Rendering
@model ProductInventory.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Create Product";
}
<h1>@ViewData["Title"]</h1>


<form asp-action="Create" method="post">
    <div>
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" />
    </div>
    <div>
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" />
    </div>
    <div>
        <label asp-for="Product.Stock"></label>
        <input asp-for="Product.Stock" />
    </div>
    <div>
        <label asp-for="Product.CategoryId"></label>
        <select asp-for="Product.CategoryId" 
                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"> <!--First param: the collection, Second param: value field (what gets saved to DB = Id), Third param: display field (what user sees = Name)-->
            <option value="">-- Select Category --</option>
        </select>
        </div>
   
    <button type="submit">Create</button>
</form>





