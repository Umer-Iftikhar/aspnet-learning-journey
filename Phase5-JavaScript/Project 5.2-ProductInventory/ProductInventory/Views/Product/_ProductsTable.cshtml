@model List<ProductInventory.Models.Product>
<div id="searchResults">
    @if(Model.Count == 0)
    {
        <p>No item found</p>
    }
    else
    {
        <table id="productsTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="@(item.Stock < 5 ? "background-color:yellow;" : "")">
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Stock</td>
                        <td>@item.Category?.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>