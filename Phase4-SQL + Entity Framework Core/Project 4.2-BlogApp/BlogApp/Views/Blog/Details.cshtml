@model BlogApp.Models.Post
@{
    ViewData["Title"] = "Post Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>@Model.Title</h2>
    <p>@Model.Content</p>
    <p>By @Model.AuthorName on @Model.CreatedDate.ToString("MMM dd, yyyy")</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure?');">
    <button type="submit" class="btn btn-danger">Delete Post</button>
</form>

<a asp-action="Index">Back to Blogs List</a>
<a asp-action="Edit" asp-route-id="@Model.Id">Edit Post</a>

