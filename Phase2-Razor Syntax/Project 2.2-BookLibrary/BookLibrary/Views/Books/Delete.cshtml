@{
    Layout = "_Layout";
    ViewData["Title"] = "Book List";  // Change per page
}

@model Book

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @(Model.Author ?? "Unknown")</p>
    <p><strong>Year:</strong> @(Model.Year?.ToString() ?? "Unknown")</p>
    <p><strong>Genre:</strong> @Model.Genre</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit">Delete</button>
</form>

<br />
<a href="/Books/Index">Cancel</a>